---
const clients = [
    { name: "Traefik Labs", url: "https://traefik.io" },
    { name: "Isovalent", url: "https://isovalent.com" },
    { name: "Cisco", url: "https://cisco.com" },
    { name: "Wilco", url: "https://trywilco.com" },
    { name: "Platform.sh", url: "https://platform.sh" },
    { name: "Cloud Foundry", url: "https://cloudfoundry.org" },
    { name: "LogRocket", url: "https://logrocket.com" },
    { name: "Smashing Magazine", url: "https://smashingmagazine.com" },
    { name: "Lumigo", url: "https://lumigo.io" },
    { name: "Stackbit", url: "https://www.netlify.com/integrations/stackbit/" },
    { name: "Evervault", url: "https://evervault.com" },
];
---

<section class="py-12">
    <h2 class="mb-6 text-lg font-medium">Employers & clients</h2>
    <div class="grid grid-cols-2 gap-x-8 gap-y-3 sm:grid-cols-3 md:grid-cols-4">
        {
            clients.map((client) => (
                <a
                    href={client.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-muted-foreground transition-colors hover:text-foreground"
                >
                    {client.name}
                </a>
            ))
        }
    </div>
</section>
